{% extends "base.html.twig" %}

{% block body %}
<main class="result-main">
	<div class="container result-container">
		<h1 class="result-title"> {{quizz.name}} </h1>
		{% if is_granted('ROLE_USER') %}
			<h2>Félicitations {{ result.user }} tu as obtenue la note de : {{ result.score }} / {{ result.outOf }} </h2>
		{% else %}
			<h2>Félicitations  tu as obtenu la note de : {{ result.score }} / {{ result.outOf }} </h2>
		{% endif %}
		{% if (result.score / result.outOf) * 100 <= 25 %}
			<img src="{{ asset('img/homer0.png') }}" alt="">
			{% elseif (result.score / result.outOf) * 100 > 25 and (result.score / result.outOf) * 100 <= 50 %}
			<img src="{{ asset('img/homer1.png') }}" alt="">
			{% elseif (result.score / result.outOf) * 100 > 50 and (result.score / result.outOf) * 100 <= 75 %}
			<img src="{{ asset('img/homer2.png') }}" alt="">
			{% elseif (result.score / result.outOf) * 100 > 75 and (result.score / result.outOf) * 100 <= 100 %}
			<img src="{{ asset('img/homer3.png') }}" alt="">
			{% else %}
		{% endif %}
	</div>

	<div class="button-choice text-center mt-5">
		<a href="{{ path('home') }}" class="btn btn-primary" type="button">Retour au Menu</a>
		<a href="{{ path('quizz_list') }}" class="btn btn-primary" type="button">Pret à rejouer ?</a>
		{% if not is_granted('ROLE_USER') %}
		<a href="{{ path('app_register') }}" class="btn btn-primary" type="button">Alors on s'inscrit ?</a>
		{% endif %}
	</div>
</main>
{% endblock %}
	